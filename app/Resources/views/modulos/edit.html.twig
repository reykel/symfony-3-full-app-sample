{% extends 'base.html.twig' %}

{% block title %}Agregar registro{% endblock %}

{% block body %}
    <h2 class="well">Editar registro</h2>
    <div id="containerPosts"></div>
    <br>
    <div class="form-horizontal well">
        {{form_start(form)}}
            <div>
                {{ form_label(form.titulo) }}
                {{ form_widget(form.titulo) }}
                {{ form_errors(form.titulo) }}
            </div>
            <div>
                {{ form_label(form.fechaInicio) }}
                {{ form_widget(form.fechaInicio) }}
                {{ form_errors(form.fechaInicio) }}
            </div>
            <div>
                {{ form_label(form.fechaFin) }}
                {{ form_widget(form.fechaFin) }}
                {{ form_errors(form.fechaFin) }}
            </div>            
            <div>
                {{ form_label(form.horasTotal) }}
                {{ form_widget(form.horasTotal) }}
                {{ form_errors(form.horasTotal) }}
            </div>
            <div>
                {{ form_label(form.horasLectivas) }}
                {{ form_widget(form.horasLectivas) }}
                {{ form_errors(form.horasLectivas) }}
            </div>
            <div>
                {{ form_label(form.profesor) }}
                {{ form_widget(form.profesor) }}
                {{ form_errors(form.profesor) }}
            </div>
            <div>
                {{ form_label(form.correo) }}
                {{ form_widget(form.correo) }}
                {{ form_errors(form.correo) }}
            </div>
            <div align="center">
                <button type="submit" class="btn btn-info btn-large"><i class="glyphicon glyphicon-ok icon-white"></i> Aceptar</button>    
                <a class="btn btn-danger btn-large" href="/actividades/index"><i class="glyphicon glyphicon-remove icon-white"></i> Cancelar</a>
            </div>
        {{form_end(form)}}
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function($){
            $("#form_fechaInicio").datepicker({
                language: "es",
                format:"yyyy-mm-dd",
                autoclose:true,
                todayHighlight:true,
                forceParse: true,
            });
            $("#form_fechaFin").datepicker({
                language: "es",
                format:"yyyy-mm-dd",
                autoclose:true,
                todayHighlight:true,
                forceParse: true,
            });            
            $("#form_horaInicio").hunterTimePicker();
            $("#form_horaFin").hunterTimePicker();            
        });
    </script>
{% endblock %}